<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>GLN List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      .header {
        text-align: center;
        margin-bottom: 30px;
      }
      .company-info {
        margin-bottom: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
      .gln-item {
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h1>GLN List</h1>
    </div>

    <div class="company-info">
      <h2>Company Information</h2>
      <p>Company Name (EN): <%= user.companyNameEn %></p>
      <p>Company Name (AR): <%= user.companyNameAr %></p>
      <p>Export Date: <%= new Date().toLocaleDateString() %></p>
    </div>

    <table>
      <thead>
        <tr>
          <th>Identifier</th>
          <th>Location Name (EN)</th>
          <th>Location Name (AR)</th>
          <th>Physical Location</th>
          <th>GTIN</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% glns.forEach(gln => { %>
        <tr>
          <td><%= gln.identifier || '-' %></td>
          <td><%= gln.locationNameEn || '-' %></td>
          <td><%= gln.locationNameAr || '-' %></td>
          <td><%= gln.physicalLocation || '-' %></td>
          <td><%= gln.gtin || '-' %></td>
          <td><%= gln.isActive ? 'Active' : 'Inactive' %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <div class="footer">
      <p>Total GLNs: <%= glns.length %></p>
    </div>
  </body>
</html>
