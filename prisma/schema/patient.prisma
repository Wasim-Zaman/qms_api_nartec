model Patient {
    id              String    @id @default(uuid())
    name            String?
    nationality     String?
    sex             String?
    idNumber        String?
    age             Int?
    mobileNumber    String?
    status          String?
    cheifComplaint  String?
    ticket          String?   
    userId          String?
    user            User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @updatedAt
    @@index([userId])
}
